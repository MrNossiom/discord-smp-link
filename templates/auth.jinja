{% extends "_base.jinja" %}

{% block title %}
{% if is_success %}Wow!{% else %}Oups!{% endif %}
{% endblock %}

{% block head %}{% endblock %}

{% block content %}
	<div style="display: flex; align-items: center; justify-content: space-around;">
		<img src="/static/images/discord-smp-link-logo.png" style="width: 200px;" />
		<span style="font-size: 40px; margin: 0 5%;">+</span>
		<img src="/static/images/smp-logo.png" style="width: 200px;" />
	</div>

	{% if is_success %}
		<h1>Hi {{ username }}!</h1>
		<p>You are logged in!</p>
		<p>You can return to discord</p>
	{% else %}
		<h1>Hi {{ username }}!</h1>
		<p>There was en error : <code>{{ error_message }}</code></p>
	{% endif %}
{% endblock %}